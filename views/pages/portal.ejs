<html>
    
        <link rel="javascript" href="fichier.js" />
    

    <body>
        <%- include('../partials/navbar') %>

        <%- include('../partials/list_person') %>

        <div class="fichiers">
            <form method="POST" action="/upload" enctype="multipart/form-data">
                <div>
                    <p>Send to</p>
                    <select name="person" id="person">
                        <% if (list){ %>
                            <% for (person of list) { %>
                                <option value="<%= person.numsecu %>"><%= person.nom %> <%= person.prenom %></option>
                            <% }; %>
                        <% }; %>
                    </select>
                </div>
                <div>
                    <label for="image_uploads">Sélectionner des fichiers à envoyer (PDF, PNG, JPG)</label>
                    <input type="file" id="image_uploads" name="uploads" accept=".pdf, .jpg, .jpeg, .png" multiple required>
                </div>
            

                <div>
                    <button type="submit">Valider</button>
                </div>
                
            </form>

            <h3>Liste des fichiers recus </h3>

            <% if (documents) {%>
                <ul>
                    <% for (document of documents) { %>
                    <li>
                        <a href="/download/<%= document.id %>"><%= document.name %></a>
                    </li>
                    <% }; %>
                    
                </ul>
                <br>
            <% }; %>

            <h3>Liste des fichiers envoyés </h3>

            <% if (sent) {%>
                <ul>
                    <% for (document of sent) { %>
                    <li>
                        <a href="/download/<%= document.id %>"><%= document.name %></a>
                    </li>
                    <% }; %>
                    
                </ul>
                <br>
            <% }; %>

        </div>
          
    </body>

    <style>

        .fichiers{
            margin-left: 40%;
            margin-top: 10%;
        }

        ul {
        padding: 0;
        width: 100%;
        }

        li {
        display: list-item;
        }

        a {
        outline: none;
        text-decoration: none;
        display: inline-block;
        width: 20%;
        margin-bottom: 1%;
        text-align:left;
        padding-left: 2%;
        line-height: 3;
        color: black;
        
        }

     
        a:link, a:visited, a:focus {
        background: rgb(161, 210, 236);
        }

        a:hover {
        background: rgb(110, 176, 194);


        }
        button {
            display: inline-block;
            background-color: #a3dae9;
            border-radius: 10px;
            border: 2px double #cccccc;
            color: #eeeeee;
            text-align: center;
            font-size: 16px;
            padding: 15px;
            width: 150px;
            cursor: pointer;
            margin: 5px;
            }

        button:hover {
                background-color: rgb(148, 185, 245);
                }
        
        

        
        


        

        
    </style>
</html>